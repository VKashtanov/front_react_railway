{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "rm -rf node_modules/ && npm install --force && rm -rf dist/ && npm run build",
    "installCommand": "rm -rf node_modules/ && npm install --force",
    "clean": true,
    "zeroConfig": false
  },
  "deploy": {
    "restartPolicy": "always"
  }
}